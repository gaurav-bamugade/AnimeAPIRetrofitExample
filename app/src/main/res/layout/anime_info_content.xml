<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="secondaryAnime"
            type="com.example.animeapiretrofitexample.model.AnimeInfoModel" />

    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/anime_id"
            android:text="@{secondaryAnime.id}"
            android:layout_width="match_parent"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/anime_title"
            android:text="@{secondaryAnime.title}"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/anime_type"
            android:text="@{secondaryAnime.type}"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/anime_synopsis"
            android:text="@{secondaryAnime.synopsis}"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</layout>
