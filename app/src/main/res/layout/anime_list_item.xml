<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
   <data>
       <variable
           name="AnimeInfo"
           type="com.example.animeapiretrofitexample.model.AnimeInfoModel" />
   </data>
    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:id="@+id/anime_card"


        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:elevation="3dp"
            card_view:cardCornerRadius="5dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/anime_image"
                    android:maxHeight="200dp"
                    bind:image="@{AnimeInfo.image}"
                    android:scaleType="fitXY"/>
                <TextView
                    android:id="@+id/anime_title"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:paddingTop="10sp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="@{AnimeInfo.title}"
                    android:layout_below="@id/anime_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
               <TextView
                    android:id="@+id/anime_ranking"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:layout_marginBottom="5dp"
                   android:layout_marginTop="5dp"
                    android:text="@{String.valueOf(AnimeInfo.ranking)}"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_below="@id/anime_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
